@model CoreLibraryProj.Author

@{
    ViewData["Title"] = "Редагування інформації щодо автора";
}
@await Html.PartialAsync("Sidebar")
@await Html.PartialAsync("HeaderItems")


<h1>Редагування інформації щодо автора</h1>

<h4>Автор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorBirthDate" class="control-label"></label>
                <input asp-for="AuthorBirthDate" class="form-control" />
                <span asp-validation-for="AuthorBirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до переліку</a>
</div>

