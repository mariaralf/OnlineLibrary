@model CoreLibraryProj.Book

@{
    ViewData["Title"] = "Edit ";
    }

@await Html.PartialAsync("Sidebar")
@await Html.PartialAsync("HeaderItems")
<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDescription" class="control-label"></label>
                <input asp-for="BookDescription" class="form-control" />
                <span asp-validation-for="BookDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookRubricId" class="control-label"></label>
                <select asp-for="BookRubricId" class="form-control" asp-items="ViewBag.BookRubricId"></select>
                <span asp-validation-for="BookRubricId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookAuthorId" class="control-label"></label>
                <select asp-for="BookAuthorId" class="form-control" asp-items="ViewBag.BookAuthorId"></select>
                <span asp-validation-for="BookAuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
