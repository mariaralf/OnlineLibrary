@model CoreLibraryProj.ViewModel.RegisterViewModel

@{
    Layout=null;
}

<head>
    <title>Реєстрація акаунту</title>
    <link rel="stylesheet" type="text/css" href="/css/LoginPage.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body> 
<div class="main_block" id="main_block_register"> 
<div class="big_child" style="width:100%; border: 4px solid #36ada9; border-radius:40px 40px 40px 40px;">
<h1 id="register_h1">Реєстрація нового користувача</h1>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="input_item">
        <label asp-for="Email">E-mail</label><br />
        <input asp-for="Email" autocomplete="off"/>
        <span asp-validation-for="Email"></span>
    </div>
    
    <div class="input_item">
        <label asp-for="Password"></label><br />
        <input asp-for="Password" autocomplete="off"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="input_item">
        <label asp-for="PasswordConfirm">Введіть пароль ще раз</label><br />
        <input asp-for="PasswordConfirm" autocomplete="off"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" id="login_button" style="width:100%;" value="Реєстрація" />
    </div>
</form>
 </div>
</div>
<script src="/js/site.js"></script>
</body>
