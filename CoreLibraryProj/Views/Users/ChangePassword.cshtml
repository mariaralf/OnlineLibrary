@model CoreLibraryProj.ViewModel.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна паролю";
}

@await Html.PartialAsync("HeaderItems")
@await Html.PartialAsync("Sidebar")

<h2>Змінити пароль для @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
     
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новий пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-outline-dark" />
    </div>
</form>